<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
        <!--tree view untuk faktur keluaran-->
        <record id="faktur_keluaran_tree_view_id" model="ir.ui.view">
            <field name="name">faktur.keluaran.tree.view.id</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="l10n_id_efaktur.account_move_efaktur_tree_view"/>
            <field name="arch" type="xml">
                <field name="invoice_user_id" position="after">
                    <field name="l10n_id_tax_number" optional="show"/>
                    <field name="l10n_id_csv_created" optional="hide"/>
                </field>
            </field>
        </record>

        <!--action id faktur keluaran-->
        <record id="faktur_keluaran_actions_id" model="ir.actions.act_window">
            <field name="name">Faktur Keluaran</field>
            <field name="res_model">account.move</field>
            <field name="domain">[('l10n_id_tax_number', '!=', False)]</field>
            <field name="context">{'search_default_group_status': 1}</field>
            <!--field name="search_view_id" ref="efaktur.faktur_keluaran_search_view_id"/-->
        </record>

        <!--set action untuk tree view untuk melihat data faktur keluaran-->
        <record id="faktur_keluaran_actions_tree_view_id" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="efaktur.faktur_keluaran_tree_view_id"/>
            <field name="act_window_id" ref="efaktur.faktur_keluaran_actions_id"/>
        </record>
        
        <!--menu item tambahan untuk e-Faktur dan Faktur Keluaran-->
        <menuitem 
            id="efaktur_menu_id"
            name="e-Faktur"
            sequence="9"
            groups="account.group_account_manager"
            parent="account.menu_finance"/>
            <menuitem 
                id="faktur_keluaran_menu_id"
                name="Faktur Keluaran"
                sequence="1"
                groups="account.group_account_manager"
                parent="efaktur.efaktur_menu_id"
                action="efaktur.faktur_keluaran_actions_id"/>

    </data>
</odoo>